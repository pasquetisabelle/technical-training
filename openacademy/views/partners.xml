<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record model="ir.actions.act_window" id="contact_list_action">
            <field name="name">Contacts</field>
            <field name="res_model">res.partner</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
        </record>
        
        <record id="openacademy_partner_form" model="ir.ui.view">
            <field name="name">openacademy.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='lang']" position="before">
                    <field name="instructor" />
                </xpath>    
                <xpath expr="//page[@name='internal_notes']" position="before">
                    <page name="academy" string="Academy">
                        <group name="academy_row_1">
                            
                            <field name="session_ids"  attrs="{'invisible': [('instructor', '=', True)]}"/>
                        </group>
                    </page>     
                </xpath>
                           
            </field>
        </record>

        <menuitem id="configuration_menu" name="Configuration"
                  parent="menu_root" />

        <menuitem id="contact_menu" name="Contacts"
                  parent="configuration_menu"
                  action="contact_list_action" />

    </data>
</odoo>
